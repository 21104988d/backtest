# Extreme Funding Rate Backtest Configuration

# ============================================================================
# DATA FETCHING
# ============================================================================
DAYS_BACK=30                   # Number of days of historical data to fetch
FETCH_DELAY=0.2                # Delay between API calls (seconds)

# ============================================================================
# BACKTEST PARAMETERS
# ============================================================================
INITIAL_CAPITAL=10000          # Starting capital in USD
POSITION_SIZE_FIXED=1000       # Fixed position size in USD per trade
                               # Set to 0 to use percentage-based sizing
POSITION_SIZE_PCT=1.0          # Fraction of capital to use per trade (0-1)
                               # Only used if POSITION_SIZE_FIXED=0
TRANSACTION_COST=0.00045        # Transaction cost as fraction (0.00045 = 0.045%)

# ============================================================================
# STRATEGY CONFIGURATION
# ============================================================================
NUM_POSITIONS=1                # Number of extreme negative funding pairs to trade
                               # 1 = Trade only #1 most extreme
                               # 3 = Trade top 3 most extreme
                               # 5 = Trade top 5 most extreme

HOLDING_PERIOD_HOURS=1         # How long to hold each position (hours)

# ============================================================================
# RISK MANAGEMENT (Optional - set to 0 to disable)
# ============================================================================
STOP_LOSS_PCT=0                # Stop loss percentage (0 = disabled, 0.02 = 2%)
TAKE_PROFIT_PCT=0              # Take profit percentage (0 = disabled, 0.05 = 5%)

# ============================================================================
# FILTERS (Optional)
# ============================================================================
MIN_FUNDING_THRESHOLD=-0.001   # Minimum funding rate to trade (-0.001 = -0.1%)
                               # Set to -1.0 to disable filtering
MAX_FUNDING_THRESHOLD=0        # Maximum funding rate to trade (0 = no max)
                               # Set to 1.0 to disable filtering
